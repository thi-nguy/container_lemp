server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name             thi-nguy.42.fr;

    ssl_certificate         /etc/nginx/my-server-cert.crt;
    ssl_certificate_key     /etc/nginx/my-server-cert.key;
    ssl_protocols           TLSv1.2 TLSv1.3;
    ssl_ciphers             "HIGH !aNULL !eNULL !EXPORT !CAMELLIA !DES !MD5 !PSK !RC4";

    root                    /var/www/mysite/wordpress;
    index index.html index.htm index.php;

    location / {
        try_files $uri $uri/ =404;
    }
    location ~ \.php$ {

        include             fastcgi_params;
        fastcgi_pass        wordpress:9000;
        fastcgi_param       SCRIPT_FILENAME /var/www/mysite/wordpress/$fastcgi_script_name;
        fastcgi_index       index.php;
    }

    location ~ /\.ht {
        deny all;
    }

    if ($request_method !~ ^(GET|HEAD|POST)$ )
    {
        return 405;
    }
}
